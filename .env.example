# Database Configuration
POSTGRES_USER=quizuser
POSTGRES_PASSWORD=quizpass
POSTGRES_DB=quizdb
POSTGRES_PORT=5432

# Backend Configuration
BACKEND_PORT=4000
NODE_ENV=production

# JWT Configuration
JWT_SECRET=change-this-in-production-please
JWT_REFRESH_SECRET=change-this-refresh-secret-too
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d

# CORS Configuration
# For Ngrok deployment, use wildcard to accept dynamic URLs
CORS_ORIGIN=*

# Frontend Configuration
FRONTEND_PORT=3000
# Use relative path for API when deploying with Nginx reverse proxy
VITE_API_URL=/api

# Upload Configuration
MAX_FILE_SIZE=10485760

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
